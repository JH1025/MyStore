<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/add_product_relativeLayout"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<ScrollView android:layout_height="fill_parent"
			android:layout_width="fill_parent">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical">

				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content" android:layout_width="fill_parent">

					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:layout_gravity="left" android:layout_marginTop="5dip">
						<ImageView android:id="@+id/edit_product_image"
							android:layout_width="130dp" android:layout_height="165dp"
							android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
							android:layout_marginTop="45dip" />

					</LinearLayout>

					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:layout_gravity="right" android:layout_marginTop="5dip">

						<TextView android:layout_width="wrap_content"
							android:textStyle="bold" android:layout_height="wrap_content"
							android:text="상품명 " android:textSize="15dip"
							android:layout_marginTop="30dip" />
						<EditText android:layout_height="wrap_content"
							android:layout_width="fill_parent" android:singleLine="true"
							android:id="@+id/edit_product_title" />

						<TextView android:layout_width="wrap_content"
							android:textStyle="bold" android:layout_height="wrap_content"
							android:text="사용기간  " android:textSize="15dip"
							android:layout_marginTop="13dip" />
						<EditText android:layout_height="wrap_content"
							android:layout_width="fill_parent" android:singleLine="true"
							android:id="@+id/edit_product_period" />

						<TextView android:layout_width="wrap_content"
							android:textStyle="bold" android:layout_height="wrap_content"
							android:text="가격  " android:textSize="15dip"
							android:layout_marginTop="13dip" />
						<EditText android:layout_height="wrap_content"
							android:singleLine="true" android:layout_width="fill_parent"
							android:id="@+id/edit_product_price" />

					</LinearLayout>
				</LinearLayout>



				<TextView android:layout_width="wrap_content"
					android:textStyle="bold" android:layout_height="wrap_content"
					android:text="설명  " android:textSize="15dip"
					android:layout_marginTop="15dip" android:layout_marginLeft="5dip"
					android:layout_marginRight="5dip" />
				<EditText android:layout_height="100dip"
					android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
					android:layout_width="fill_parent" android:id="@+id/edit_product_explain" />





				<LinearLayout android:orientation="horizontal"
					android:gravity="center_horizontal" android:layout_height="fill_parent"
					android:layout_width="fill_parent" android:layout_marginTop="20dip">

					<Button android:id="@+id/edit_product_button"
						android:layout_width="70dip" android:layout_height="wrap_content"
						android:text="수정" android:layout_gravity="center" />
					<Button android:id="@+id/delete_product_button"
						android:layout_width="70dip" android:layout_height="wrap_content"
						android:text="삭제" android:layout_gravity="center" />

				</LinearLayout>

			</LinearLayout>
		</ScrollView>
	</RelativeLayout>


</LinearLayout>
		






