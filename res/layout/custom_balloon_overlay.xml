<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingBottom="35dip"
	android:paddingLeft="10dip" android:minWidth="200dip" android:id="@+id/balloon_main_layout"
	android:paddingTop="0dip" android:paddingRight="0dip"
	android:background="@drawable/balloon_overlay_bg_selector">
	<!-- android:background="@drawable/p1" 소스 수정하기... -->

	<LinearLayout android:id="@+id/balloon_inner_layout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1">
		<ImageView android:id="@+id/balloon_item_image"
			android:layout_width="90dip" android:layout_height="90dip"
			android:paddingTop="8dip" android:paddingRight="8dip"
			android:layout_margin="5dp" />
		<!-- android:src="@drawable/icon" -->

		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:orientation="vertical" android:paddingTop="9dip"
			android:layout_marginLeft="3dip" android:layout_marginRight="2dip">
			<TextView android:id="@+id/balloon_item_title"
				android:layout_marginTop="2dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="balloon_item_title"
				android:textColor="@android:color/primary_text_light"
				android:textSize="15dip" />
			<TextView android:id="@+id/balloon_item_snippet"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="1dip" android:text="balloon_item_snippet"
				android:textColor="@android:color/secondary_text_light"
				android:textSize="12dip" />
		</LinearLayout>
	</LinearLayout>
	<ImageView android:id="@+id/balloon_close"
		android:paddingLeft="10dip" android:paddingBottom="10dip"
		android:paddingRight="8dip" android:paddingTop="8dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/close" />
	<!-- android:src="@drawable/p2" 소스 수정하기... -->

</LinearLayout>